<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/base_bar_layout"
        layout="@layout/base_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/change"
                android:textColor="@color/text_color_blue"
                android:textSize="@dimen/test_m"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="类型"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:background="@drawable/bg_frame_tv"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="start|center_vertical"
                        android:text="区域主管"
                        android:textSize="@dimen/test_m"
                        android:textColor="@color/test_color_feeble"
                        android:layout_marginLeft="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_margin="1dp"
                        android:background="@color/bg_black_d"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/back_d"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="@dimen/layout_marginT"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="区域"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:background="@drawable/bg_frame_tv"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="start|center_vertical"
                        android:text="区域A"
                        android:textSize="@dimen/test_m"
                        android:textColor="@color/test_color_feeble"
                        android:layout_marginLeft="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_margin="1dp"
                        android:background="@color/bg_black_d"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/back_d"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="@dimen/layout_marginT"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="姓名"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />


                <com.ppg.customview.ClearEditText
                    android:id="@+id/et_02"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:background="@drawable/bg_frame_tv"
                    android:hint="请输入姓名"
                    android:drawableRight="@drawable/selector_delete"
                    android:textColor="@color/test_color_feeble"
                    android:textColorHint="@color/test_color_grey"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="@dimen/layout_marginT"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="直属领导"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:background="@drawable/bg_frame_tv"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="start|center_vertical"
                        android:text="区域主管甲"
                        android:textSize="@dimen/test_m"
                        android:textColor="@color/test_color_feeble"
                        android:layout_marginLeft="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_margin="1dp"
                        android:background="@color/bg_black_d"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/back_d"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="@dimen/layout_marginT"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="所属城市"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />


                <com.ppg.customview.ClearEditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:background="@drawable/bg_frame_tv"
                    android:hint="请输入所在城市"
                    android:drawableRight="@drawable/selector_delete"
                    android:textColor="@color/test_color_feeble"
                    android:textColorHint="@color/test_color_grey"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="@dimen/layout_marginT"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="联系电话"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />


                <com.ppg.customview.ClearEditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:background="@drawable/bg_frame_tv"
                    android:hint="请输入联系电话"
                    android:drawableRight="@drawable/selector_delete"
                    android:textColor="@color/test_color_feeble"
                    android:textColorHint="@color/test_color_grey"
                    />

            </LinearLayout>

            <View
                android:layout_marginLeft="@dimen/layout_marginLR"
                android:layout_marginRight="@dimen/layout_marginLR"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/test_color_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_01" />

            <TextView
                android:layout_marginTop="@dimen/layout_marginT"
                android:layout_gravity="center_horizontal"
                android:text="登录信息"
                android:textSize="@dimen/test_xl"
                android:textColor="@color/test_color_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="@dimen/layout_marginT"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="登录账号"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />


                <com.ppg.customview.ClearEditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:background="@drawable/bg_frame_tv"
                    android:hint="请输入账号"
                    android:drawableRight="@drawable/selector_delete"
                    android:textColor="@color/test_color_feeble"
                    android:textColorHint="@color/test_color_grey"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="@dimen/layout_marginT"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="密码"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />


                <com.ppg.customview.ClearEditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:background="@drawable/bg_frame_tv"
                    android:hint="请输入密码"
                    android:textColor="@color/test_color_feeble"
                    android:textColorHint="@color/test_color_grey"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="@dimen/user_msg_margin"
                android:layout_marginLeft="@dimen/user_msg_margin"
                android:layout_marginTop="@dimen/layout_marginT"
                android:orientation="horizontal"
                >

                <TextView
                    android:background="@drawable/bg_frame_tv"
                    android:text="确认密码"
                    android:textSize="@dimen/test_m"
                    android:textColor="@color/test_color_base"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />


                <com.ppg.customview.ClearEditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:background="@drawable/bg_frame_tv"
                    android:hint="请再次输入密码"
                    android:textColor="@color/test_color_feeble"
                    android:textColorHint="@color/test_color_grey"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/btn_marginTB"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/selector_bg_btn"
                android:text="@string/affirm"
                android:textColor="@color/black"
                android:textSize="@dimen/test_m"

                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>