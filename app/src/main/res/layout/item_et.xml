<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <View
        android:id="@+id/view_top"
        android:background="@color/item_view_top"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/layout_marginT"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_01"
        app:layout_constraintTop_toBottomOf="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:layout_marginLeft="@dimen/layout_marginLR"
        >

        <EditText
            android:id="@+id/et_01"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:gravity="top"
            android:hint="请输入"
            android:background="@color/bg_white"
            android:inputType="textMultiLine"
            android:textColor="@color/test_color_feeble"
            android:textColorHint="@color/test_color_grey"
            android:textSize="@dimen/test_m"
            android:padding="@dimen/text_paddingLR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/v_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_marginTB"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cl_01" />

</android.support.constraint.ConstraintLayout>