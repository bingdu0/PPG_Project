<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin"
    >


    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="责任人："
        android:textColor="@color/black"
        android:textSize="@dimen/test_s"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="张三"
        android:textColor="@color/black"
        android:textSize="@dimen/test_s"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:text="时间节点："
        android:textColor="@color/black"
        android:textSize="@dimen/test_s"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="@+id/guideline" />
    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2018-10-12"
        android:textColor="@color/black"
        android:textSize="@dimen/test_s"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView1"
        app:layout_constraintEnd_toStartOf="@+id/iv_back_r"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="项目问题："
        android:textColor="@color/black"
        android:textSize="@dimen/test_s"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="问题描述，问题描述，根据内容取有限长度的说明文字"
        android:textColor="@color/test_color_feeble"
        android:textSize="@dimen/test_s"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        />



 <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="原因分析及建议:"
        android:textColor="@color/black"
        android:textSize="@dimen/test_s"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="原因分析和建议，根据内容取有限长度的说明文字整改结果，整改结果，根据内容取有限长度的说明文。"
        android:textColor="@color/test_color_feeble"
        android:textSize="@dimen/test_s"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        />


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</android.support.constraint.ConstraintLayout>