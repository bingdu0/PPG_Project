<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white">

    <View
        android:id="@+id/v_btn_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_marginTB"
        android:background="@color/bg_white"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/sp_12"
        android:paddingLeft="@dimen/text_paddingLR"
        android:paddingTop="@dimen/sp_12"
        android:text="项目名称："
        android:textColor="@color/text_color_blue"
        android:textSize="@dimen/test_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/v_btn_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_btn_top" />

</android.support.constraint.ConstraintLayout>